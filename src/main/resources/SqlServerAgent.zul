<?xml version="1.0" encoding="UTF-8" ?>
<?component name="input_criteri" macro-uri="comu/input_criteri.zul"?>
<?component name="input_dada" macro-uri="comu/input_dada.zul"?>
<?component name="input_etiqueta" macro-uri="comu/input_etiqueta.zul"?>
<?component name="input_password" macro-uri="comu/input_password.zul"?>

<grid width="99%">
	<columns visible="false"><column width="14%"/><column/> </columns>
	<rows>
		<row>
			<input_etiqueta value="User" />
			<hbox width="90%">
				<input_dada bind="@param0" lectura="${!canModifyAgent}"
					width_custom="98%" />
			</hbox>
		</row>
		<row>
			<input_etiqueta value="Password" />
			<hbox width="90%">
				<input_password bind="@param1" lectura="${!canModifyAgent}"
					width_custom="98%" />
			</hbox>
		</row>
		<row>
			<input_etiqueta value="Connection string to database" />
			<hbox width="90%">
				<input_dada bind="@param2" lectura="${!canModifyAgent}"
					width_custom="98%" />
			</hbox>
		</row>
		<row>
			<input_etiqueta value="Create agents for each database" />
			<listbox bind="@param3" mold="select">
				<listitem value="false" label="No"></listitem>
				<listitem value="true" label="Yes"></listitem>
			</listbox>
		</row>
		<row>
			<input_etiqueta value="Enable debug" />
			<listbox bind="@param4" mold="select" disabled="{!canModifyAgent}" width="100px">
				<listitem value="false">
					<listcell label="No"/>
				</listitem>
				<listitem value="true">
					<listcell label="Yes"/>
				</listitem>
			</listbox>
		</row>
	</rows>
</grid>
